<p id="notice"><%= notice %></p>

<h1>Authors</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @authors.each do |author| %>
      <tr>
        <td><%= author.name %></td>
        <td><%= link_to 'Show', author %></td>
        <td><%= link_to 'Edit', edit_author_path(author) %></td>
        <td><%= link_to 'Destroy', author, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Author', new_author_path %>

<br>

<h4>Count of Each Author</h4><%= @authorsCount %>

<h4>Distinct Author names</h4>
<% @names.each do |name| %>
  <p><%= name.name %></p>
<% end%>

<h4>All Books From Authors</h4>
<% @books.each do |name| %>
  <p><%= name.name %></p>
<% end%>